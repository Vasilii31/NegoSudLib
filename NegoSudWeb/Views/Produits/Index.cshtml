<div class="product-container">
    @foreach (var product in Model)
    {
        <div class="product-card">               
            <div class="product-domaine">@product.NomDomaine</div>
            <div class="product-picInfo">
                <img class="product-pic"  src="@product.PhotoProduitPath" alt="@product.NomProduit">
                <div class="product-info">
                    <div class="card-title">@product.NomProduit</div>
                    <div class="card-description">@product.DescriptionProduit</div>
                </div>
            </div>
            <div class="price">@product.PrixAchat.ToString("C")</div>
            <form method="post">
                <input type="hidden" name="productId" value="@product.Id" />
                @* <input type="hidden" name="productQuantity" value="@product.Quantity" /> *@
                @* <input type="hidden" name="productCarton" value="@product.AuCarton" /> *@
                <button type="submit">Add to Cart</button>
            </form>
        </div>
    }
