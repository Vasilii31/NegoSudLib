@model IEnumerable<NegoSudLib.DTO.Read.CategorieDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Nos catégories à explorer :</h1>

<div class="product-container">
	@foreach (var categorie in Model)
	{
		<a class="product-card-link" asp-area="" asp-controller="Produits" asp-action="Categorie" asp-route-id="@categorie.Id">

		<div class="product-card">
			
		
			<div class="product-picInfo">
				@if (categorie.NomCategorie == "Rouge")
				{
					<img class="img-categorieRouge" src="~/img/vinRouge.png">
				}
				else if (categorie.NomCategorie == "Blanc")
				{
					<img class="img-categorieBlanc" src="~/img/vinBlancc.png">
				}
				else if (categorie.NomCategorie == "Rosé")
				{
					<img class="img-categorieRose" src="~/img/vinRose.png">
				}
				else if (categorie.NomCategorie == "Pétillant")
				{
					<img class="img-categoriePetillant" src="~/img/vinPetillant.png">
				}
				else if (categorie.NomCategorie == "Champagne")
				{
					<img class="img-categorieChampagne" src="~/img/vinChampagne.png">
				}
				else if (categorie.NomCategorie == "Digestifs")
				{
					<img class="img-categorieDigestifs" src="~/img/vinDigestif.png">
				}
			</div>
			<h2 class="CategorieNom">@categorie.NomCategorie
			</h2>
		</div>
		</a>
		@*<div class="product-action">
								<a href="#" class="btn btn-primary">Voir les produits</a>
							</div>*@			
	
	}
</div>


