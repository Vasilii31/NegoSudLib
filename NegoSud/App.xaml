<Application x:Class="NegoSud.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NegoSud"
             xmlns:viewModel="clr-namespace:NegoSud.MVVM.ViewModel"
             xmlns:view ="clr-namespace:NegoSud.MVVM.View"
             Startup="ApplicationStart">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/TextBoxTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
                <view:HomeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:LoginFormViewModel}">
                <view:LoginFormView/>
            </DataTemplate>
        </ResourceDictionary>

        

    </Application.Resources>
</Application>
