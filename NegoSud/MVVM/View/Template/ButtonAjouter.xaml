<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:Page="clr-namespace:NegoSud.MVVM.View.Page" 
             x:Class="NegoSud.MVVM.View.Template.ButtonAjouter">

    <Button x:Name="ButtonAdd"  Background="#460A26" Foreground="Wheat" BorderBrush="Transparent" BorderThickness="0" Click="ButtonAdd_Click" 
            MouseEnter="ButtonAdd_MouseEnter" MouseLeave="ButtonAdd_MouseLeave">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>
        <materialDesign:PackIcon Kind="Add" VerticalAlignment="Center"/>
    </Button>
         
</UserControl>
