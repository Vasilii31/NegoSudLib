<UserControl x:Class="NegoSud.MVVM.View.Template.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Border CornerRadius="10,10,10,10" Background="#F9D9D9" BorderBrush="#F9D9D9" BorderThickness="1">
        <Grid Width="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="rechercher"  BorderThickness="0" Background="Transparent" />
            <Border HorizontalAlignment="Right" Width="100">
                <materialDesign:PackIcon Kind="Search" Grid.Column="1" Height="20" Background="#F9D9D9" Margin="80,0,0,0" Width="15"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
