<Button
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:Page="clr-namespace:NegoSud.MVVM.View.Page" 
             x:Class="NegoSud.MVVM.View.Template.ButtonNormal"
            x:Name="ButtonNorm" Background="#460A26" Foreground="White" BorderBrush="Transparent" BorderThickness="0" Click="ButtonNormal_Click" >
 


           
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>
        <materialDesign:PackIcon Kind="Add" VerticalAlignment="Center"/>

 </Button>
